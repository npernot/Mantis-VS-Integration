<UserControl x:Class="VSMantisConnect.Views.ProjectView"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:local="clr-namespace:VSMantisConnect.Views"
xmlns:ui="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.14.0"
xmlns:mdl="clr-namespace:MantisConnectAPI;assembly=MantisConnectAPI"
mc:Ignorable="d" 
d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="25" />
			<RowDefinition Height="25*" />
			<RowDefinition Height="25*" />
		</Grid.RowDefinitions>
		<ComboBox Name="cbxProjects" VerticalAlignment="Center" ItemsSource="{Binding}" Style="{DynamicResource {x:Static ui:VsResourceKeys.ComboBoxStyleKey}}" SelectionChanged="cbxProjects_SelectionChanged" >
			<ComboBox.ItemTemplate>
				<DataTemplate DataType="mdl:ProjectData">
					<StackPanel IsEnabled="{Binding enabled}" HorizontalAlignment="Stretch">
						<StackPanel.ToolTip>
							<ToolTip ContentStringFormat="Description : {0}" Content="{Binding description}" />
						</StackPanel.ToolTip>
						<TextBlock Grid.Row="0" Text="{Binding name}" FontWeight="Bold" />
						<TextBlock Grid.Row="1" Text="{Binding status.name}" />
					</StackPanel>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<ListBox Grid.Row="1" Name="lstIssues" ItemsSource="{Binding}" SelectionChanged="lstIssues_SelectionChanged">
			<ListBox.ItemTemplate>
				<DataTemplate DataType="mdl:IssueData">
					<StackPanel HorizontalAlignment="Stretch">
						<TextBlock Text="{Binding summary}" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<ListBox Grid.Row="2" Name="lstProjectFilter" ItemsSource="{Binding}" >
			<ListBox.ItemTemplate>
				<DataTemplate DataType="mdl:FilterData">
					<StackPanel HorizontalAlignment="Stretch">
						<TextBlock Text="{Binding access_min}" />
						<TextBlock Text="{Binding description}" />
						<TextBlock Text="{Binding enabled}" />
						<TextBlock Text="{Binding enabledSpecified}" />
						<TextBlock Text="{Binding file_path}" />
						<TextBlock Text="{Binding id}" />
						<TextBlock Text="{Binding inherit_global}" />
						<TextBlock Text="{Binding inherit_globalspecified}" />
						<TextBlock Text="{Binding name}" />
						<TextBlock Text="{Binding status}" />
						<TextBlock Text="{Binding subprojects}" />
						<TextBlock Text="{Binding view_state}" />
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
